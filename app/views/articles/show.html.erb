<h1>
  <%= @article.title %>
  <%=  link_to '<i class="fas fa-pen"></i>'.html_safe, edit_article_path(@article) %>
  <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, article_path(@article.id),
    method: :delete,
    data: { confirm: "Are you sure?" } %>
</h1>
<p>
  <%= @article.content.html_safe %>
</p>
